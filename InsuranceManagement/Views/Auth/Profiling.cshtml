</div>
@*<div id="loader2" data-request-ajax2="@Url.Action("Logout")"></div>*@
@section Scripts {
    <script type="text/javascript">$(document).ready(function () {

            var PaymentTable = $('#ProfileTable').DataTable({
                "Destroy": true,
                "pageLength": 100,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Insurance/FetchInsurances",
                    "dataType": "json",
                    "type": "POST",

                },
                "columns": [
                    { "data": "Edit" },
                    { "data": "Bvn" },
                    { "data": "ArrangementId" },
                    { "data": "CurrentAccount" },
                    { "data": "LoanAccount" },
                    { "data": "Rate" },
                    { "data": "Email" },
                    { "data": "Phone" },
                    { "data": "ExpiryDate" },
                    { "data": "CommunityType" },
                    { "data": "Flag" },
                    { "data": "Delete" },
                ],
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            })

            $('#id_structure').change(function () {
                var value = $('#id_structure').val();
                if (value === "Restructure")
                    window.location.replace("/LoanRestructure/Profiling");

                else
                    window.location.replace("/LoanRestructure/Index");
            });
        });</script>
}

