                <th>EXPIRY DATE</th>
                <th>COMMUNITY TYPE</th>
                <th>FLAG</th>
                <th>DELETE</th>
            </tr>
        </thead>
        <tbody>
            <tr class="gradeX">
                <td id="id_NAME"> </td>
                <td id="id_EMA"> </td>
                <td id="id_PN"> </td>
