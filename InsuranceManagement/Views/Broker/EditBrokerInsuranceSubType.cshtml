@model InsuranceCore.Models.BrokerSubInsuranceType

@{
    ViewData["Title"] = "EditBrokerInsuranceSubType";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="text-align: center;">Edit Broker Insurance SubType</h2>

@*<h4>BrokerSubInsuranceType</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBrokerInsuranceSubType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Broker.BrokerName, new { @class = "control-label" })
                @Html.DropDownListFor(model => model.BrokerId, (IEnumerable<SelectListItem>)ViewBag.BrokerId, "-- Select Broker --", new { @class = "form-control" , @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.BrokerId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.InsuranceType.InsuranceType.Name, new { @class = "control-label" })
                @Html.DropDownListFor(model => model.BrokerInsuranceTypeId, (IEnumerable<SelectListItem>)ViewBag.BrokerInsuranceTypeId, "-- Select Insurance Type --", new { @class = "form-control" , @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.BrokerInsuranceTypeId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="PercentageToBank" class="control-label"></label>
                <input asp-for="PercentageToBank" class="form-control" readonly/>
                <span asp-validation-for="PercentageToBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status:</label>
                <select asp-for="Status" class="form-control"required>
                    <option value="">-- Select Status --</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" style="background-color: #25237a;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BrokerInsuranceSubTypeIndex" class="btn btn-success">Back to List</a>
</div>

