@model List<PermissionInfo>

@{
    ViewData["Title"] = "ViewFeature";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Mapped Permissions</h1>
    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permission in Model)
            {
                <tr>
                    <td>@permission.Code</td>
                    <td>@permission.Name</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
