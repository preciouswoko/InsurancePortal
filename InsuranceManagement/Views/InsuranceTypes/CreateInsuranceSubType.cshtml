@model InsuranceCore.Models.InsuranceSubType

@{
    ViewData["Title"] = "CreateInsuranceSubType";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h4 style="text-align: center;">Create InsuranceSubType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInsuranceSubType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InsuranceTypeId" class="control-label"></label>
                <select asp-for="InsuranceTypeId" class="form-control" asp-items="ViewBag.InsuranceTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" required>
                    <option value="">-- Select Status --</option>
                    @foreach (var item in ViewBag.StatusOptions)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" style="background-color: #25237a;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InsuranceSubTypeIndex" class="btn btn-success">Back to List</a>
</div>


