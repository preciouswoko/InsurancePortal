@model InsuranceCore.Models.InsuranceSubType

@{
    ViewData["Title"] = "EditInsuranceSubType";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@*<h2>EditInsuranceSubType</h2>*@

<h4 style="text-align: center;">InsuranceSubType</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditInsuranceSubType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="InsuranceTypeId" class="control-label"></label>
                <select asp-for="InsuranceTypeId" class="form-control" asp-items="ViewBag.InsuranceTypeId"></select>
                <span asp-validation-for="InsuranceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label" required></label>
                @Html.DropDownList("Status", (SelectList)ViewBag.BrokerStatusList, "Select Status", new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InsuranceSubTypeIndex" class="btn btn-success">Back to List</a>
</div>


