@model InsuranceCore.Models.Underwriter

@{
    ViewData["Title"] = "EditUnderwriter";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="text-align: center;">Edit Underwriter</h2>

@*<h4>Underwriter</h4>*@
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditUnderwriter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrokerId" class="control-label"></label>
                <select asp-for="BrokerId" class="form-control" asp-items="ViewBag.BrokerId"></select>
                <span asp-validation-for="BrokerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label" required></label>
                @Html.DropDownList("Status", (SelectList)ViewBag.BrokerStatusList, "Select Status", new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" style="background-color: #25237a;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>


